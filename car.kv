#:kivy 1.9.1

#:include music.kv

<Widget>:
    font_size: 25

[BigButton@Button]:
    text: ctx.text if hasattr(ctx, 'text') else ''
    font_size: 20
    markup: True

<MenuScreen>:
    BoxLayout:
        GridLayout:
            cols: 2
            Button:
                text: 'Music'
                on_release: app.root.setScreen('music')
            BigButton:
                text: 'Navigation'
            BigButton:
                text: 'Settings'
            TextInput:
                text: 'hello'

<RootWidget>:
    BoxLayout:
        id: top_layout
        orientation: 'vertical'
        size: self.parent.size

        BoxLayout:
            id: toolbar_layout
            orientation: 'horizontal'
            size_hint: 1,0.2

            Label:
                id: clock
                text: ''
            Label:
                text: 'Top Bar'
            Button:
                size_hint: 0.2,1
                text: 'Home'
                on_release: app.root.setScreen('menu')
 
        ScreenManager:
            id: screen_manager
            MenuScreen:
                name: "menu"
            MusicScreen:
                name: "music"
